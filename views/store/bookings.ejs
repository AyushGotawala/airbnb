<%- include('../partials/head') %>
<body>
    <%- include('../partials/nav') %>
    <div class="container">
        <h1 style="text-align: center;margin-bottom:30px ;">Bookings</h1>
        <div class="card-container">
            <% registeredHomes.forEach(home => { %>
                <div class="card">
                    <img src="home.jpg" class="card-img" alt="Home Image">
                    <div class="card-body">
                        <h5 class="card-title"><%= home.homeName %></h5>
                        <p class="card-description"><%= home.description %></p>
                        <p class="card-location"><strong>Location:</strong> <%= home.location %></p>
                        <p class="card-price"><strong>Price:</strong> <%= home.price %> Rs / Night</p>
                        <p class="card-type"><strong>Type:</strong> <%= home.type %></p>
                        <!-- Book Button -->
                        <form action="/book/<%= home._id %>" method="POST">
                            <button class="button-28" role="button" type="submit">Book</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
